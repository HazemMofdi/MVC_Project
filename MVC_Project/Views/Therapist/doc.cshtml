@model List<Therapist>

<style>
    .doctor-card {
        z-index:10000;
        display:none;
        width: 500px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 12px;
        text-align: center;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        font-family: 'Cairo', sans-serif;
        direction: ltr;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        transition: 0.2s ease-in-out;
    }



    .doctor-image {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 50%;
        margin-bottom: 10px;
    }

    .doctor-name {
        font-size: 30px;
        margin: 10px 0 5px;
        color: #333;
    }

    .doctor-specialty,
    .doctor-experience,
    .doctor-rating,
    .doctor-price {
        margin: 5px 0;
        color: #1b65a7;
        font-size: 20px;
    }

    .doctor-bio {
        font-size: 18px;
        color: #777;
        margin: 15px 0;
    }
    .doc-btn {
        position: absolute;
        bottom: 0;
        right: 0;
        padding: 5px 10px;
        font-size: 14px;
        border: none;
        margin: 10px;
        transition: 0.3s;
        background-color: #1977cc;
        color: white;
    }

    .doc-btn:hover{
            background-color: #1977ccc2;
            color: white;
    }
    .exit{
        color: red;
        position: absolute;
        top: 10px;
        font-size: 19px;
        right: 15px;
        cursor: pointer;
        transition: 0.2s ease-in-out;
    }

    .exit:hover{
            transform: scale(1.2);
    }
</style>
<section id="doctors" class="doctors section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Therapists</h2>
        <p>Our Amazing Team</p>
    </div>
    <!-- End Section Title -->

    <div class="container">

        <div class="row gy-4">

            @foreach (var item in Model)
            {
                <div class="col-lg-6" data-aos="fade-up" data-aos-delay="400">
                    <div class="team-member d-flex align-items-start">
                        <div class="pic"><img src="~/wwwroot/images/@item.ImagePath" class="img-fluid" alt=""></div>
                        <div class="member-info">
                            <h4 class="DB-doctor-name">@item.FullName</h4>
                            <p>@item.Bio</p>
                            <button class="doc-btn">More</button>
                        </div>
                    </div>
                </div>
                <div class="doctor-card">
                    <img src="~/assets/img/doctors/doctors-1.jpg" alt="Doctor Image" class="doctor-image">
                    <h2 class="doctor-name">@item.FullName</h2>
                    <p class="doctor-specialty">Psychiatrist</p>
                    <p class="doctor-experience">10 years of experience</p>
                    <p class="doctor-rating">⭐⭐⭐⭐⭐ <br>@item.Rating (4 reviews)</p>
                    <p class="doctor-bio">@item.Bio</p>
                    <p class="doctor-price">Session Price: 200</p>
                    <span class="exit">X</span>
                </div>
            }
        </div>

    </div>

</section>