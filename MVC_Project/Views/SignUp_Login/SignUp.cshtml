@using MVC_Project.ViewModels
@model SignupViewModel
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Poppins", sans-serif;
    }

    body {
        min-height: 100vh;
        background: #f0faff;
    }

    .signup form {
        width: 450px;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        background-color: #1977ccb3;
        border-radius: 10px;
        gap: 20px;
        padding: 20px;
        margin: 0 auto;
    }

    .form header {
        padding: 20px;
        font-size: 30px;
        text-align: center;
        color: #1977cc;
        font-weight: 600;
        cursor: pointer;
    }

    .form.login header {
        color: #333;
        opacity: 0.6;
    }


    form input {
        height: 60px;
        width: 300px;
        outline: none;
        border: none;
        padding: 0 15px;
        font-size: 16px;
        font-weight: 400;
        color: black;
        border-radius: 8px;
        background: #fff;
    }

    .form.signup input {
        border: 1px solid #aaa;
    }

        .form.signup input:first-child {
            margin-top: 30px;
        }

        .form.signup input:focus {
            box-shadow: 0 1px 0 #ddd;
        }

    .checkbox input[type="checkbox"] {
        height: 16px;
        width: 16px;
        accent-color: #fff;
        cursor: pointer;
    }

    form .checkbox label {
        cursor: pointer;
        color: #fff;
    }

    form a {
        color: #4070f4 !important;
        text-decoration: none;
    }

        form a:hover {
            text-decoration: underline;
        }

    form input[type="submit"] {
        border: none !important;
        background-color: #1977cc;
        color: white;
        margin-top: 15px;
        font-size: 18px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        form input[type="submit"]:hover {
            background-color: #2c4964c9;
            width: 100px;
        }
</style>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Signup</title>
</head>

<body>
    <section class="wrapper">
        <div class="form signup">
            <header>Signup</header>
            <form asp-action="SignUp" asp-controller="SignUp_Login" method="post">
                <input asp-for="FullName" placeholder="Full name" required />
                <input asp-for="Email" placeholder="Email address" required />
                <input asp-for="Password" placeholder="Password" required />
                <input asp-for="PhoneNumber" placeholder="Phone number" />
                @* 
                <input asp-for="Preferences" placeholder="Your Session Preference" />

                <input asp-for="DateOfBirth" type="date" />
                <select asp-for="Gender" required>
                    <option value="">Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>


                <select asp-for="HealthAssessmentResults">
                    <option value="">Choose your complaint</option>
                    <option value="Anxiety">Anxiety</option>
                    <option value="MildDepression">MildDepression</option>
                    <option value="SevereStress">SevereStress</option>
                    <option value="PTSD">PTSD</option>
                    <option value="OCD">OCD</option>
                    <option value="BipolarDisorder">BipolarDisorder</option>
                    <option value="PanicDisorder">PanicDisorder</option>
                </select>
                <span asp-validation-for="HealthAssessmentResults" class="text-danger"></span> *@
                <div class="checkbox">
                    <input type="checkbox" id="signupCheck" required/>
                    <label for="signupCheck">I accept all terms & conditions</label>
                </div>
                <input type="submit" value="Signup" />
                <p style="text-align: center; color: white;">
                    Already have an account? <a href="/SignUp_Login/login" style="color: #fff; text-decoration: underline;">Login</a>
                </p>
            </form>
        </div>
    </section>
</body>
</html>