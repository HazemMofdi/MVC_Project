@model List<Session>
<style>
    .main{
        min-height: 80vh;
    }
</style>
<div class="container section-title" data-aos="fade-up">
    <h2>Sessions</h2>
    <p>@ViewBag.FullName's Sessions</p>
</div>

<table border="1">
    <thead>
        <tr>
            <th>Session ID</th>
            <th>Session Date</th>
            <th>Session Type</th>
            <th>Session Status</th>
            <th>Session Notes</th>
            <th>Session Cancelation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var session in Model)
        {
            var isPast = session.SessionDate.Date < DateTime.Now.Date;
            var status = session.SessionStatus == "Booked" && isPast ? "Completed" : session.SessionStatus;

            <tr>
                <td>@session.Id</td>
                <td>@session.SessionDate.ToShortDateString()</td>
                <td>@session.SessionType</td>
                <td>@status</td>
                <td>@session.SessionNotes</td>
                <td>
                    @if (status == "Booked")
                    {
                        <form asp-action="CancelSession" asp-controller="Session" method="post" style="margin:0;">
                            <input type="hidden" name="id" value="@session.Id" />
                            <button type="submit" class="btn btn-danger">Cancel</button>
                        </form>
                    }
                    else
                    {
                        <span>-</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    table {
        width: 80%;
        margin: 20px auto;
        border-collapse: collapse;
        font-family: 'Segoe UI', sans-serif;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    th, td {
        padding: 12px 15px;
        border: 1px solid #ddd;
        text-align: center;
    }

    thead {
        background-color: #007bff;
        color: white;
    }

    tbody tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tbody tr:hover {
        background-color: #e0f7fa;
        cursor: pointer;
    }
</style>
